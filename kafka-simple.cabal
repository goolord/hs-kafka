extra-source-files:  CHANGELOG.md

library
  exposed-modules:     Common
                     , Kafka
                     , ProduceRequest
                     , ProduceResponse
                     , Varint
  ghc-options: -Wall -Werror -O2 -threaded -rtsopts -with-rtsopts=-N
  -- other-modules:
  -- other-extensions:
  build-depends:       base ^>=4.12.0.0
                     , sockets >= 0.4.0.0 && < 0.5.0.0
                     , primitive >= 0.7.0.0 && < 0.8.0.0
                     , primitive-unlifted >= 0.1.1.0 && < 0.2.0.0
                     , byteslice >= 0.1.1.0 && < 0.2.0.0
                     , ip >= 1.5.0
                     , cpu >= 0.1.2 && < 0.2
                     , bytestring
                     , text
                     , crc32c
                     , attoparsec
                     , containers
  hs-source-dirs:      src
  default-language:    Haskell2010

executable kafka-simple-exe
  main-is:             Main.hs
  -- other-modules:
  -- other-extensions:
  build-depends:       base ^>=4.12.0.0
                     , kafka-simple
                     , sockets >= 0.4.0.0 && < 0.5.0.0
                     , primitive >= 0.7.0.0 && < 0.8.0.0
                     , primitive-unlifted >= 0.1.1.0 && < 0.2.0.0
                     , byteslice >= 0.1.1.0 && < 0.2.0.0
                     , ip >= 1.5.0
                     , bytestring
  hs-source-dirs:      app
  default-language:    Haskell2010

test-suite tests
  type:                exitcode-stdio-1.0
  main-is:             Test.hs
  hs-source-dirs:      test
  build-depends:       attoparsec
                     , base ^>=4.12.0.0
                     , bytestring
                     , kafka-simple
                     , primitive >= 0.7.0.0 && < 0.8.0.0
                     , primitive-unlifted >= 0.1.1.0 && < 0.2.0.0
                     , tasty
                     , tasty-golden
                     , tasty-hunit
